{
  "manifest_version": 3,
  "name": "Citéo",
  "default_title" : "Clique pour lire une citation!",

  "description":"Génère aléatoirement des citations",
  "version":"1.0",
  "icons":{
    "16":"images/icone_citation16.png",
    "32":"images/icone_citation32.png",
    "48":"images/icone_citation64.png",
    "128":"images/icone_citation128.png"
  },
    
    "action":{
      "default_popup":"popup.html",
      "default_icon": {
        "16":  "images/icone_citation16.png",
        "32":  "images/icone_citation32.png",
        "48":  "images/icone_citation64.png",
        "128": "images/icone_citation128.png"
      }
      
    },

    "permissions" : ["storage"],
    "web_accessible_resources":[
      {
        "resources":["quotes.json"],
        "matches": ["*://*/*"]
      }
    ]

    
  }
